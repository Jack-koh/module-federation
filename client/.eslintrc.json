{
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": ["airbnb", "prettier", "airbnb/hooks", "plugin:@typescript-eslint/recommended"],
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".ts", ".tsx", ".js", ".jsx"]
      }
    }
  },
  "env": {
    "browser": true
  },
  "globals": {
    "document": false
  },
  "rules": {
    "import/extensions": [2, "ignorePackages", { "ts": "never", "tsx": "never" }],
    "import/no-unresolved": 0,
    "dot-notation": 0,
    "no-param-reassign": ["off"],
    "arrow-body-style": ["off"],
    "no-unsafe-optional-chaining": ["off"],
    "react/function-component-definition": [
      2,
      { "namedComponents": ["arrow-function", "function-declaration", "function-expression"] }
    ],
    "react/prop-types": 0,
    "react/jsx-no-useless-fragment": 0,
    "react/jsx-pascal-case": 0,
    "react/no-unstable-nested-components": ["off"],
    "react/jsx-no-constructed-context-values": 0,
    "react/no-unescaped-entities": [0],
    "prefer-regex-literals": ["off"],
    "camelcase": [0],
    "guard-for-in": 0,
    "react-hooks/exhaustive-deps": 0,
    "no-use-before-define": "off",
    "linebreak-style": [0, "windows"],
    "default-case": 0,
    "no-console": 0,
    "@typescript-eslint/no-use-before-define": ["error"],
    "@typescript-eslint/camelcase": 0,
    "@typescript-eslint/class-name-casing": 0,
    "@typescript-eslint/explicit-function-return-type": 0,
    "@typescript-eslint/no-namespace": 0,
    "jsx-a11y/no-static-element-interactions": 0,
    "jsx-a11y/click-events-have-key-events": 0,
    "jsx-a11y/no-noninteractive-element-interactions": 0,
    "jsx-a11y/control-has-associated-label": [
      2,
      {
        "labelAttributes": ["label"],
        "controlComponents": ["CustomComponent"],
        "ignoreElements": ["audio", "canvas", "embed", "input", "textarea", "tr", "video", "button"],
        "ignoreRoles": [
          "grid",
          "listbox",
          "menu",
          "menubar",
          "radiogroup",
          "row",
          "tablist",
          "toolbar",
          "tree",
          "treegrid"
        ],
        "depth": 3
      }
    ],
    "no-underscore-dangle": ["error"],
    "no-restricted-syntax": ["error", "WithStatement", "BinaryExpression[operator='in']"],
    "react/require-default-props": [0],
    "react/no-unused-prop-types": [0],
    "react/no-array-index-key": 0,
    "react/jsx-filename-extension": [1, { "extensions": [".ts", ".tsx"] }],
    "react/jsx-curly-newline": 0,
    "react/jsx-one-expression-per-line": 0,
    "react/jsx-indent": [0],
    "react/jsx-props-no-spreading": 0,
    "react/destructuring-assignment": [0],
    "react/jsx-wrap-multilines": [
      "error",
      {
        "declaration": "parens-new-line",
        "assignment": "parens-new-line",
        "return": "parens-new-line",
        "arrow": "parens-new-line",
        "condition": "parens-new-line",
        "logical": "ignore",
        "prop": "ignore"
      }
    ],
    "no-unused-expressions": [2, { "allowShortCircuit": false, "allowTernary": true }],
    "import/prefer-default-export": 0,
    "no-shadow": 0,
    "import/no-extraneous-dependencies": 0,
    "lines-between-class-members": ["error", "always", { "exceptAfterSingleLine": true }],
    "jsx-a11y/label-has-associated-control": 0
  }
}
