{
  "compilerOptions": {
    "target": "es6",
    "baseUrl": "src",
    "outDir": "./dist",
    "module": "commonjs",
    "lib": ["es6", "dom", "es2016", "es2018", "ESNext", "DOM.Iterable"],
    "jsx": "react-jsx",
    // "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./@types/*"]
  },
  "include": ["src/module/lib/**/*", "src/module/lib**/*", ".eslintrc.json"],
  "exclude": ["node_modules"]
}
